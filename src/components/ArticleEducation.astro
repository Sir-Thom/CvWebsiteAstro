---
export interface Props {
    title: string;
    href: string;
}

import Card from "./Card.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url).toString();
const { title, href } = Astro.props;
---

<section id={href}>
    <div class="my-24 pb-10 font-futura-pt text-black dark:text-white">
        <div class="container mx-auto px-4">
            <div class="flex flex-col items-center justify-center">
                <h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
                    {title}
                </h1>
                <div class="flex flex-wrap justify-center gap-8">
                    <Card
                        title="Diplôme d'étude secondaire"
                        description="Polyvalente Saint-Georges | 2017-2021"
                    />
                    <Card
                        title="DEC en informatique"
                        description="Cégep Beauce Appalaches | 2021-aujourd'hui"
                    />
                </div>
            </div>
        </div>
    </div>
</section>
