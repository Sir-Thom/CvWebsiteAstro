---
export interface Props {
	title: string;
	href: string;
}

import Card from "./Card.astro";
import { getLangFromUrl } from "../i18n/utils";
import uiJson from "../data/ui.json";

const lang = getLangFromUrl(Astro.url);
const education = uiJson[lang].education.educationsList;
const { title, href } = Astro.props;
---

<section id={href}>
	<div class="my-24 pb-10 font-futura-pt text-black dark:text-white">
		<div class="container mx-auto px-4">
			<div class="flex flex-col items-center justify-center">
				<h1 class="mb-6 text-4xl font-bold tracking-tight md:text-6xl">
					{title}
				</h1>
				<div class="flex flex-wrap justify-center gap-8">
					<Card title={education[0].title} description={education[0].description} />
					<Card title={education[1].title} description={education[1].description} />
					<Card title={education[2].title} description={education[2].description} />
				</div>
			</div>
		</div>
	</div>
</section>
