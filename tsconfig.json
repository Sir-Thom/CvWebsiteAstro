{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"jsx": "react",
		"target": "ESNext",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
		  "*": ["node_modules/*", "src/types/*"]
		}
	  },
	  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"]
}
