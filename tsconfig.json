{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {	
		"jsx": "react-jsx",
		//"noImplicitAny": false,
		
		"target": "ESNext",
		"module": "ESNext",
		"resolveJsonModule": true ,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
		  "*": ["node_modules/*", "src/types/*"]
		}
	  },
	  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"],
	  "exclude": [
		"**/*.spec.ts"
	  ]
}
